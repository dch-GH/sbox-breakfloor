@using System;
@using System.Linq
@using Sandbox;
@using Sandbox.UI;
@using Breakfloor;

@namespace Breakfloor.UI
@inherits Panel

@code
{
    protected override int BuildHash()
    {
        return HashCode.Combine(Time.Now);
    }

    public override void Tick()
    {
        base.Tick();
        SetClass("active", Input.Down(InputActions.Score));
    }
}

<root>
    <inner>
        <left>
            <label class="team-header" style="color:red;">RED</label>
            @{
                foreach (var client in Game.Clients.Where((x => x.GetInt("team") == (int)Team.RED)))
                {
                    <ScoreboardEntry Client=@client>
                    </ScoreboardEntry>
                }
            }
        </left>
        <seperator></seperator>
        <right>
            <label class="team-header" style="color:blue;">BLUE</label>
            @{
                foreach (var client in Game.Clients.Where(x => x.GetInt("team") == (int)Team.BLUE))
                {
                    <ScoreboardEntry Client=@client>
                    </ScoreboardEntry>
                }
            }
        </right>

    </inner>
</root>

<style>
    Scoreboard {
        background-color: rgba(0, 0, 0, 0.068);
        backdrop-filter: blur(3px);
        position: absolute;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        display: flex;
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        z-index: -1;
        transition: opacity 250ms ease-in-out;
        text-shadow: 2px 2px 3px black;

        &.active {
            opacity: 1;
            transition: opacity 250ms ease-in-out;
        }

        inner {
            background-image: linear-gradient(to top, rgba(0, 0, 0, 0.521), rgba(0, 0, 0, 0));
            border-radius: 8px;
            width: 900px;
            height: 800px;

            .team-header {
                font-family: Poppins;
                font-weight: bold;
                align-self: center;
                text-align: center;
                font-size: 64px;
                border-bottom: 2px white;
            }

            left {
                display: flex;
                flex-direction: column;
                width: 50%;
            }

            seperator {
                align-self: center;
                width: 3px;
                height: 90%;
                background-image: linear-gradient(to top, rgba(255, 255, 255, 0.521), rgba(0, 0, 0, 0));
            }

            right {
                display: flex;
                flex-direction: column;
                width: 50%;
            }
        }
    }
</style>